# Application
NODE_ENV=development
PORT=3001
API_PREFIX=api/v1
CORS_ORIGIN=http://localhost:3000
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# Database
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=password
DB_DATABASE=cybersecure_db
DB_SYNC=true
DB_LOGGING=true

# JWT
JWT_SECRET=dev-secret-key-for-development-only-change-this
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_SECRET=dev-refresh-secret-for-development-only
JWT_REFRESH_TOKEN_EXPIRY=7d
JWT_COOKIE_NAME=refresh_token
JWT_COOKIE_SECURE=false
JWT_COOKIE_HTTP_ONLY=true
JWT_COOKIE_SAME_SITE=strict

# Security
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
SESSION_SECRET=dev-session-secret-change-this
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_TIME=900000

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_MIME_TYPES=image/jpeg,image/png,application/pdf
STORAGE_TYPE=local